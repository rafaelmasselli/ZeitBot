{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@main/*": ["main/*"]
    }
  },
  "include": ["domain/**/*", "infrastructure/**/*", "main/**/*", "modules/**/*", "shared/**/*", "jobs/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "**/node_modules/**"]
}

